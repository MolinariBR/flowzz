{
  "name": "flowzz",
  "version": "1.0.0",
  "description": "Flowzz - Sistema de gestão de vendas e automação",
  "private": true,
  "workspaces": [
    "backend",
    "flow",
    "admin",
    "landing"
  ],
  "scripts": {
    "lint": "biome check .",
    "lint:fix": "biome check . --write --unsafe",
    "format": "biome format . --write",
    "check": "biome check . && pnpm -r run type-check",
    "type-check": "pnpm -r run type-check",
    "test": "vitest",
    "test:integration": "vitest run tests/integrations",
    "test:integration:watch": "vitest tests/integrations",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:flow": "playwright test --project=flow",
    "test:e2e:admin": "playwright test --project=admin",
    "test:e2e:report": "playwright show-report",
    "test:all": "pnpm -r run test && pnpm run test:e2e && pnpm run test:integration",
    "prepare": "husky install || echo 'Husky hooks not installed - continuing...'"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "biome check --write --no-errors-on-unmatched --diagnostic-level=warn",
      "biome format --write"
    ],
    "*.{json,md,css}": [
      "biome format --write"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@playwright/test": "^1.49.1",
    "@types/supertest": "^6.0.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "supertest": "^7.1.4",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
