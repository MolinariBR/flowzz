{
  "name": "flowzz",
  "version": "1.0.0",
  "description": "Flowzz - Sistema de gestão de vendas e automação",
  "private": true,
  "workspaces": [
    "backend",
    "flow",
    "admin",
    "landing"
  ],
  "scripts": {
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:flow": "playwright test --project=flow",
    "test:e2e:admin": "playwright test --project=admin",
    "test:e2e:report": "playwright show-report",
    "test:all": "pnpm -r run test && pnpm run test:e2e"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
